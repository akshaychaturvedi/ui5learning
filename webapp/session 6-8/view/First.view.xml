<mvc:View xmlns:table="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.tnt" controllerName="app.controller.First"
    xmlns="sap.m">
    <App id="app">
        <Page id="firstPage" title="Learn UI5">

            <Panel id="idPanel1" headerText="Learn about Properties" expandable="true" expanded="true">
                <TextArea id="textArea1" rows="5" placeholder="Enter text .." value="Initial Value" liveChange=".onLiveChange"></TextArea>
            </Panel>

            <Panel id="idPanel2" headerText="Learn about Events and Methods" expandable="true" expanded="true">
                <TextArea id="textArea2" rows="5" editable="false"></TextArea>
            </Panel>

            <Panel id="idPanel3" headerText="Learn about Aggregations" expandable="true" expanded="true">
                <Table >
                    <headerToolbar>
                        <Toolbar >
                            <Title text="Employee Data"></Title>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column >
                            <Label text="First Name"></Label>
                        </Column>
                        <Column >
                            <Label text="Last Name"></Label>
                        </Column>
                        <Column >
                            <Label text="Email"></Label>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem >
                            <Text text="Akshay"></Text>
                            <Text text="Chaturvedi"></Text>
                            <Text text="akshaychaturvedi@gmail.com"></Text>
                        </ColumnListItem>
                        <ColumnListItem >
                            <Text text="Divya Singhal"></Text>
                            <Text text="Chaturvedi"></Text>
                            <Text text="divyasinghal@gmail.com"></Text>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>

        </Page>
    </App>
</mvc:View>